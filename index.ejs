<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>EAC - Signalement</title>

    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/style.min.css">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon.png">
    <script src="https://kit.fontawesome.com/c532ba22e2.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="css/eac.css">

    <script src="scripts/ejs.min.js"></script>
    <script src="scripts/config.js"></script>
    <script src="scripts/modeles.js"></script>
    <script src="scripts/navigation.js"></script>
  </head>
  <body>

    <header class="o-header">
      <div class="o-container">
        <h1 class="o-header__title"><%= titre %></h1>
      </div>
    </header>

    <main class="o-main">
      <form>
        <div class="o-container" id="container-type-crime"> </div>
        <div id="formulaire-detaille" class="o-container">
          <div class="o-section">
            <div id="menu-navigation" class="c-tabs no-js">
              <div class="c-tabs-nav">
                <a href="#" class="c-tabs-nav__link is-active">
                  <i class="fas fa-times-circle"></i>
                  <span>Crime</span>
                </a>
                <a href="#" class="c-tabs-nav__link">
                  <i class="fas fa-user-ninja"></i>
                  <span>Suspects</span>
                </a>
                <a href="#" class="c-tabs-nav__link">
                  <i class="fas fa-car"></i>
                  <span>Vehicules</span>
                </a>
                <a href="#" class="c-tabs-nav__link">
                  <i class="fas fa-cannabis"></i>
                  <span>Drogues</span>
                </a>
                <a href="#" class="c-tabs-nav__link">
                  <i class="fas fa-camera"></i>
                  <span>Images</span>
                </a>
              </div>
              <% for(var section in sections ) { %>
                <% if(section != "routing") { %>
                  <%- include(process.env.PWD + '/views/partials/tab_content.ejs', { section: sections[section] }) %>
                <% } %>
              <% } %>
            </div> 
          </div> 
        </div> 
      </form>
    </main>
    <script src="js/src/tabs.js"></script>
  </body>
</html>
